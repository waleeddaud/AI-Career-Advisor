@{
    string? currentPath = Context.Request.Path.Value?.ToLower();
    bool hideHeader = false;
    bool hideFooter = false;
    if(currentPath != null){
        hideHeader = currentPath.Contains("/account/login") || currentPath.Contains("/account/register");
        hideFooter = hideHeader;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareerAdvisorApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CareerAdvisorApp.styles.css" asp-append-version="true" />
</head>
<body>
    @if(!hideHeader){
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 mx-3">
                <div class="container-fluid">
                    <div style="width:48px; height:48px;">
                    <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g clip-path="url(#clip0_6_319)">
                        <path
                            d="M8.57829 8.57829C5.52816 11.6284 3.451 15.5145 2.60947 19.7452C1.76794 23.9758 2.19984 28.361 3.85056 32.3462C5.50128 36.3314 8.29667 39.7376 11.8832 42.134C15.4698 44.5305 19.6865 45.8096 24 45.8096C28.3135 45.8096 32.5302 44.5305 36.1168 42.134C39.7033 39.7375 42.4987 36.3314 44.1494 32.3462C45.8002 28.361 46.2321 23.9758 45.3905 19.7452C44.549 15.5145 42.4718 11.6284 39.4217 8.57829L24 24L8.57829 8.57829Z"
                            fill="currentColor"
                        ></path>
                        </g>
                        <defs>
                        <clipPath id="clip0_6_319"><rect width="48" height="48" fill="white"></rect></clipPath>
                        </defs>
                    </svg>
                    </div>
                    <div class="mx-5">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CareerAdvisorApp</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
            
    }
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main> 
    </div>
    @if(!hideFooter){
        <footer class="border-top footer text-muted bg-light  mt-5">
            <div class="container text-center ">
                <div class="d-flex flex-wrap justify-content-center gap-3 mb-0">
                <a href="#" class="text-secondary text-decoration-none">Privacy Policy</a>
                <a href="#" class="text-secondary text-decoration-none">Terms of Service</a>
                <a href="#" class="text-secondary text-decoration-none">Contact Us</a>
                </div>
                <div class="d-flex justify-content-center gap-3 mb-0">
                <a href="#"><i class="bi bi-twitter text-secondary"></i></a>
                <a href="#"><i class="bi bi-facebook text-secondary"></i></a>
                <a href="#"><i class="bi bi-instagram text-secondary"></i></a>
                </div>
                <p class="text-secondary mb-0">&copy; 2025 CareerAdvisor. All rights reserved.</p>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
