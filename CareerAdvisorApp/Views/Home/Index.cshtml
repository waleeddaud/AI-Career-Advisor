@{
    ViewData["Title"] = "Home Page";
}

<div class="my-5">
    <div class="text-center p-4 rounded" style="background-image: url('...'); background-size: cover; background-position:center;">
      <h1 class="text-dark display-5 fw-bold">Plan Your Career with AI Guidance</h1>
      <p class="text-dark fs-5 pt-3">Unlock your potential with CareerAdvisor...</p>
    </div>
     <section class="py-3">
        <div class="container">
            <h2 class="fw-bold mb-4">How It Works</h2>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card h-100 border-0">
                        <img src="~/images/laptop.png" class="card-img-top rounded" alt="Career Details">
                        <div class="card-body">
                            <h5 class="card-title">Enter Your Career Details</h5>
                            <p class="card-text text-secondary">Share your current career status, aspirations, and skills to receive tailored guidance.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0">
                        <img src="~/images/ai.png" class="card-img-top rounded" alt="AI Advice">
                        <div class="card-body">
                            <h5 class="card-title">Get AI Career Advice</h5>
                            <p class="card-text text-secondary">Our AI analyzes your information to provide personalized career paths and recommendations.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0">
                        <img src="~/images/plan.png" class="card-img-top rounded" alt="Plan Future">
                        <div class="card-body">
                            <h5 class="card-title">Plan Your Future</h5>
                            <p class="card-text text-secondary">Create a detailed plan with actionable steps to achieve your career objectives.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="pt-2 pb-0 bg-light">
        <div class="container pb-5">
            <h2 class="fw-bold mb-4">Why Choose Us</h2>
            <p class="fs-4 mb-5">CareerAdvisor combines the power of AI with expert career advice to provide you with the best possible guidance.</p>
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="card h-100 p-3 border-light">
                        <div class="card-icon mb-2">
                            <!-- Icon SVG here -->
                        </div>
                        <h5 class="fw-bold">Personalized Guidance</h5>
                        <p class="text-secondary">Receive career advice tailored to your unique skills, experience, and goals.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 p-3 border-light">
                        <div class="card-icon mb-2">
                            <!-- Icon SVG here -->
                        </div>
                        <h5 class="fw-bold">Data-Driven Insights</h5>
                        <p class="text-secondary">Benefit from AI-powered analysis of industry trends and career paths.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 p-3 border-light">
                        <div class="card-icon mb-2">
                            <!-- Icon SVG here -->
                        </div>
                        <h5 class="fw-bold">Actionable Plans</h5>
                        <p class="text-secondary">Get clear, step-by-step plans to help you achieve your career aspirations.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 p-3 border-light">
                        <div class="card-icon mb-2">
                            <!-- Icon SVG here -->
                        </div>
                        <h5 class="fw-bold">24/7 Availability</h5>
                        <p class="text-secondary">Access our AI career advisor anytime, anywhere, for on-demand support.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="py-5 bg-white"></div>
