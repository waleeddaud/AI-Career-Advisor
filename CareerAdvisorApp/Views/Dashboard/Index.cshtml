@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Microsoft.AspNetCore.Identity.IdentityUser

<style>
    body {
        background-color: #8fbec2; 
    }

    .dashboard-card {
        background-color: #f8f9fa; 
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .dashboard-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #8fbec2;
        border: none;
    }

    .btn-primary:hover {
        background-color: #78a9ad;
    }

    .btn-outline-primary {
        border-color: #8fbec2;
        color: #8fbec2;
    }

    .btn-outline-primary:hover {
        background-color: #8fbec2;
        color: white;
    }

    /* Updated card title styling */
    .card-title {
        color: #000000 !important;
        font-size: 1.4rem;
        font-weight: 700;
    }

    .card p {
        font-size: 1rem;
    }
</style>

<div class="my-5 pb-5">
    <div class="text-center mb-5">
        <h1 class="text-dark text-larger mb-3">Welcome to Your Dashboard</h1>
        <h2 class="fw-bold text-dark text-larger">Hello, @Model.UserName</h2>
        <p class="text-light fs-5">Let us plan your career journey with our AI Career Advisor</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card dashboard-card shadow-lg border-0 p-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Your Profile Summary</h5>
                    <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                    <p class="text-muted small mt-2">You can update your details anytime in your account settings.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 justify-content-center mb-5">
        <div class="col-md-4">
            <div class="card dashboard-card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <h5 class="card-title">Create Career Plan</h5>
                    <p class="text-muted" style="padding-bottom:11%">Enter your skills, education, and goals to generate a personalized roadmap.</p>
                    <a href="/Career/DetailsForm" class="btn btn-primary w-100">Start Planning</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <h5 class="card-title">View Saved Plans</h5>
                    <p class="text-muted">Review or download your previously generated AI career plans.</p>
                    <a href="/Career/SavedPlans" class="btn btn-outline-primary w-100 mt-5">View Plans</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <h5 class="card-title">Chat with AI (Beta)</h5>
                    <p class="text-muted">Ask questions or refine your career roadmap interactively with our AI.</p>
                    <a href="/Career/Chat" class="btn btn-outline-secondary w-100 mt-5">Ask career related questions from our AI</a>
                </div>
            </div>
        </div>
    </div>
</div>
